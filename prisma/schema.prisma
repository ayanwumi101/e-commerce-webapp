// Prisma Schema for E-commerce Web App (Sneakers & Wears)
// Using Neon PostgreSQL database

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  password  String?
  name      String
  phone     String?
  avatar    String?
  isAdmin   Boolean    @default(false)
  addresses Address[]
  cartItems CartItem[]
  orders    Order[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([email])
}

model Address {
  id         String   @id @default(cuid())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  label      String?  // e.g. "Home", "Office"
  street     String
  city       String
  region     String?
  country    String   @default("Nigeria")
  postalCode String?
  lat        Float?   // populated from geocoding
  lon        Float?
  isDefault  Boolean  @default(false)
  createdAt  DateTime @default(now())
  orders     Order[]

  @@index([userId])
}

model Product {
  id          String      @id @default(cuid())
  title       String
  slug        String      @unique
  description String
  price       Float
  discount    Float?      // percentage discount (e.g., 10 means 10% off)
  currency    String      @default("NGN")
  images      String[]    // array of image URLs
  category    String      // "sneakers", "men", "women"
  sizes       String[]    // e.g. ["38", "39", "40", "41", "42"]
  stock       Int         @default(0)
  featured    Boolean     @default(false)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  orderItems  OrderItem[]
  cartItems   CartItem[]

  @@index([slug])
  @@index([category])
  @@index([featured])
}

model CartItem {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
  size      String?
  qty       Int      @default(1)
  createdAt DateTime @default(now())

  @@unique([userId, productId, size])
  @@index([userId])
}

model Order {
  id             String      @id @default(cuid())
  user           User        @relation(fields: [userId], references: [id])
  userId         String
  items          OrderItem[]
  subtotal       Float
  deliveryFee    Float
  total          Float
  currency       String      @default("NGN")
  status         OrderStatus @default(PENDING)
  paid           Boolean     @default(false)
  reference      String?     @unique // Paystack payment reference
  shippingAddr   Address?    @relation(fields: [shippingAddrId], references: [id])
  shippingAddrId String?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  @@index([userId])
  @@index([reference])
  @@index([status])
}

model OrderItem {
  id        String  @id @default(cuid())
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId   String
  product   Product @relation(fields: [productId], references: [id])
  productId String
  title     String
  price     Float
  qty       Int
  size      String?

  @@index([orderId])
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  DELIVERED
  CANCELLED
}
